@model SchoolTHang.Models.Announcement
@{
    ViewBag.Title = "CreateAnnoucement";
}

<h2>CreateAnnoucement</h2>
@using (Html.BeginForm())
{
    <div class="panel panel-default">
<div class="form-group">
    @Html.LabelFor(p => p.Name)
    @Html.TextBoxFor(p => p.Name)
    </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Content)
            @Html.TextAreaFor(p => p.Content)
        </div>
    </div>
    @Html.HiddenFor(p => p.ID_Subject, new { Value = ViewBag.SubjectID})
    <input type="submit" class="btn btn-success" />
}
