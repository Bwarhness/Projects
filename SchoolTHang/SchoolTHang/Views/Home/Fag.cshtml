@model SchoolTHang.Models.Fag
@{
    var viewModel = (SchoolTHang.Models.MainLayoutViewModel)ViewBag.MainLayoutViewModel;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <h2>@Model.Name</h2>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lektier
                @if (viewModel.Currentuser.IsTeacher)
                {
                    @Html.ActionLink("Opret Lektie", "CreateAssignment", new { SubjectID = Model.Id }, new { @class = "btn btn-default" })

                }
            </div>
            <div class="panel-body" style="padding:0">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Navn</th>
                            <th>Oprettet dato</th>
                            <th>Deadline</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Assignments)
                        {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Created.ToShortDateString()
                            </td>
                            <td>
                                @item.Deadline.ToShortDateString()
                            </td>
                        </tr>
                        }

                     

                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Rettet opgaver
            </div>
            <div class="panel-body" style="padding:0">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Navn</th>
                            <th>Dato</th>
                            <th>Karakter</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
